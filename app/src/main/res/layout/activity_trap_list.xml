<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sample.sdk.prime.com.mysamplecode.primedrone.TrapList">

    <LinearLayout
        android:id="@+id/mission_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="horizontal">

        <!--<TextView
            android:id="@+id/trapdatatext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="data"/>-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:scrollbars="vertical"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/trapdatatext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_span="4"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="Waiting..." />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </TableLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="426dp"
                android:paddingBottom="20dp"
                android:scrollbars="none">

                <TableLayout
                    android:id="@id/tab_trap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bright"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_normal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_text_subshape"
                            android:gravity="center"
                            android:text="SEQUENCE"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_text_subshape"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="TRAP ID"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_text_subshape"
                            android:gravity="center"
                            android:text="LATITUDE"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_text_subshape"
                            android:gravity="center"
                            android:text="LONGITUDE"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>

            </ScrollView>

            <TextView
                android:id="@+id/statustext"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingTop="10dp"
                android:layout_weight="1.72"
                android:text="status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_weight="0.43"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <fragment
                android:id="@+id/mapFragment"
                class="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="2" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_margin="30dp"
                android:background="@drawable/my_button"
                android:text="mission start"
                android:textColor="@color/common_text_color" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
